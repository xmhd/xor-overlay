+#define DTRACE_SIZEOF_EPROBEDESC(desc)				\
+	(sizeof(struct dtrace_eprobedesc) + ((desc)->dtepd_nrecs ?  \
+	(((desc)->dtepd_nrecs - 1) * sizeof(struct dtrace_recdesc)) : 0))
+
