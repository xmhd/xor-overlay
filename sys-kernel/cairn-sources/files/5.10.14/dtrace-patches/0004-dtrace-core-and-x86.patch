+	(sizeof(struct dtrace_aggdesc) + ((desc)->dtagd_nrecs ?     \
+	(((desc)->dtagd_nrecs - 1) * sizeof(struct dtrace_recdesc)) : 0))
+
+#endif /* _LINUX_DTRACE_METADESC_H */
