+	(cpumask_test_cpu(cpuid, bitmap) == 1)
+
+#define	DTRACE_SYNC_NEEDED(cpuid, bitmap)				\
+	cpumask_set_cpu(cpuid, bitmap)
+
+#define	DTRACE_SYNC_DONE(cpuid, bitmap)					\
+	cpumask_clear_cpu(cpuid, bitmap)
